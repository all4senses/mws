      ), //keyphrase 
      'updated' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => FALSE,
        'description' => 'timestamp of last data update',
      ), //updated 
      'monthly_searches' => array(
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'monthly search volume.',
      ), //score 
      'competition' => array(
        'type' => 'int',
        'size' => 'tiny',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'competivness of the keyword.',
      ), //competition
      'avg_cpc' => array(
        'type' => 'float',
